@model IEnumerable<Novel.Bll.DB.tChapter>
@{
    ViewBag.Title = "Index";
}
<style>
    a{
        display:inline-block;
        clear:both;
        float:left;
    }
</style>
<h2>Index</h2>

@foreach (var item in Model)
{
    <a href="@Url.Action("Detail","Chapter",new { id = item.ID })">@item.Title</a>
        }
